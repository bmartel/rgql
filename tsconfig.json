{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@pages/*": ["pages/*"],
      "@graphql/*": ["graphql/*"],
      "@lib/*": ["lib/*"]
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "types",
    "src/**/*.ts",
    "pages/**/*.ts",
    "lib/**/*.ts",
    "graphql/**/*.ts",
    "src/**/*.tsx",
    "pages/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
